    <Script file="LeftPanel.lua"/>
    
    <!-- DockUI 子模块（按依赖顺序加载） -->
    <Script file="DockUI_Def.lua"/>
    <Script file="DockUI_Debug.lua"/>
    <Script file="DockUI_Highlight.lua"/>
    <Script file="DockUI_Dropdown.lua"/>
    <Script file="DockUI_Slider.lua"/>
    <Script file="DockUI_EntryFactory.lua"/>
    <Script file="DockUI_Collapse.lua"/>
    <Script file="DockUI_Templates.lua"/>
    <Script file="DockPageRegistry.lua"/>
    <Script file="PageRouter.lua"/>
    
    <!-- 8个独立页面模块（每个分类一个） -->
    <Script file="pages/PageBase.lua"/>
    <Script file="pages/Page_General.lua"/>
    <Script file="pages/Page_Clipboard.lua"/>
    <Script file="pages/Page_Recent.lua"/>
    <Script file="pages/Page_DyePresets.lua"/>
    <Script file="pages/Page_AutoRotate.lua"/>
    <Script file="pages/Page_ExpertSettings.lua"/>
    <Script file="pages/Page_Keybinds.lua"/>
